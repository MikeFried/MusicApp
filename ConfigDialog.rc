    COMBOBOX        IDC_MIDI_OUTPUT_COMBO, 7, 107, 295, 100, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    CONTROL         "Test Audio Connection", IDC_TEST_AUDIO_CHECK, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 7, 127, 295, 10

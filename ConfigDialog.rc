#include <windows.h>
#include "ConfigDialog.h"

IDD_CONFIG_DIALOG DIALOGEX 0, 0, 309, 176
STYLE DS_SETFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
